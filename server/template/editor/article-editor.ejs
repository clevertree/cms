
                <form action="/:article/<%=id%>/edit" method="POST" class="form-article-edit themed">
                    <input type="hidden" name="id" value="<%=id%>" />
                    <fieldset>
                        <table class="themed" style="width: 100%;">
                            <tbody>
                                <tr>
                                    <th style="width: 65px;"></th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <td class="label">Title</td>
                                    <td>
                                        <input type="text" name="title"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label">Path</td>
                                    <td>
                                        <input type="text" name="path" />
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label">Parent</td>
                                    <td>
                                        <input type="text" name="parent_id" placeholder="ID" size="3" />
                                        <select class="article-editor-select-parent">
                                            <option value="">Select Parent</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label">Theme</td>
                                    <td>
                                        <select name="theme">
                                            <option value="">Default Site Theme</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label">Flags</td>
                                    <td>
                                        <% ['Main-Menu', 'Sub-Menu', 'Account-Only', 'Admin-Only'].forEach(flagName => { %>
                                        <label>
                                            <input type="checkbox" class="themed" name="flag[<%=flagName.toLowerCase()%>]"/>
                                            <%=flagName.replace('-', ' ')%>
                                        </label>
                                        <% })%>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label">Content</td>
                                    <td>
                                        <textarea class="editor-plain editor-iframe-target" name="content" style="width: 100%; height: 400px; display: none;"></textarea>
                                        <iframe class="editor-iframe editor-iframe-trumbowyg" src="/server/template/editor/client/iframe-trumbowyg.html"
                                                style="width: 100%; height: 400px; overflow-x: hidden; border: 0px"></iframe>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label">Preview</td>
                                    <td>
                                        <label>
                                            <select name="action">
                                                <option value="draft">Save as Unpublished Draft</option>
                                                <option value="publish">Publish Now (No Preview)</option>
                                            </select>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="label"></td>
                                    <td>
                                        <button type="submit">Publish</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </fieldset>
                </form>
                <script src="/server/template/editor/client/article-editor.js"></script>
                <link   href="/server/template/editor/client/article-editor.css" rel="stylesheet">
